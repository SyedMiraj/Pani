      <!--android:id="@+id/forgotPasswordBtn"-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:background="#2A9A46"-->
      <!--android:textColor="#fff"-->
